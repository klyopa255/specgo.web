extends ../pug/noAuthLayout.pug

block meta
  title Авторизація
  meta(name='description', content='Сторінка авторизації SpecGo')

//- block append head
//-   link(rel='stylesheet', href='css/some.css')

block content
  .flex-container.flex-container--around
    h1.main-title Авторизація

  .flex-container.flex-container--around
    a(href="/auth").logo
      img(src="/img/logoAuth.svg", alt="")

  .flex-container.flex-container--around
    form(action="#").form
      .white-aria
        label(for="login").form__label Логін
        input(type="text" name="login" id="login").form__input
        label(for="password").form__label Пароль
        input(type="password" name="password" id="password").form__input
      .flex-container
        input(type="submit" value="Увійти").button.button--full-width

  .flex-container.flex-container--small-width
    a(href="#").link.link--black.link--underline Забули пароль
    a(href="/register.html").link.link--black.link--underline Реєстрація

  .social-auth
    h2.social-auth__title Увійти за допомогою
    ul.social-auth__list
      li.social-auth__item
        a(href="#").social-auth__link.social-auth__link--fb Фейсбук
      li.social-auth__item
        a(href="#").social-auth__link.social-auth__link--tg Фейсбук


